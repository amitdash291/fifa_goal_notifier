{
  "manifest_version": 2,
  "name": "Fifa Goal Notifier",
  "description": "A browser extension that notifies when a goal is scored in Fifa World Cup(2018)",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "jquery-3.3.1.min.js",
      "background.js"
    ]
  },
  "permissions": ["storage"]
}