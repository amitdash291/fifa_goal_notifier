{
  "name": "Fifa Goal Notifier",
  "version": "1.1",
  "description": "A browser extension that notifies when a goal is scored in Fifa World Cup(2018)",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
      "128": "images/icon.png"
  },  
    "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "content.js"
      ]
    }
  ],
  "manifest_version": 2
}